@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100 bg-dark">
    <div class="card p-4 shadow-lg rounded-4 text-white bg-secondary" style="width: 100%; max-width: 400px;">

        <!-- Welcome Message -->
        <div class="text-center mb-4">
            <h2 class="fw-bold mb-1">🎬 Welcome to</h2>
            <h1 class="fw-bold text-light">MovieFlix</h1>
        </div>

        <form method="post" asp-controller="Auth" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-control" placeholder="Enter your username" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-light fw-bold">Login</button>
            </div>
        </form>
    </div>
</div>
